{% extends  'base.html.twig' %}

{% block title %}Ver stand{% endblock %}

{% block stylesheets %}
	<style>
		.container{
			max-width: 90%;
		}
		p{
			font-size: 2em;
		}
	</style>
{% endblock %} 

{% block body %}
	{% set stand = {"nombre": "Crustaceo Cascarudo", "owner": "Don Cangrejo", "info": "aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa", "ciudad": "Fondo de Bikini"} %}

	{% include 'header.html.twig' %}
	<div class="container center">
		<article class="no-padding">
		  <div class="grid no-space">
		    <div class="s6">
		      <img class="responsive" style="max-width: 30pc;" src="https://upload.wikimedia.org/wikipedia/commons/2/25/The_Krusty_Krab.png">
		    </div>
		    <div class="s6">
		      <div class="padding">
		        <h2>{{ stand.nombre }}</h5>
		        <p>Dueño: {{ stand.owner }}</p>
		        <p>Información: {{ stand.info }}</p>
		        <p>Ciudad: {{ stand.ciudad }}</p>
		        <nav>
		          <a href="/stands"><button class="border round">Volver</button></a>
		          <a href="/productos"><button class="border round">Ver prodcutos</button></a>
		          <a href="/ordenes"><button class="border round">Ver ordenes</button></a>
		        </nav>
		      </div>
		    </div>
		  </div>
		</article>
	</div>
{% endblock %}