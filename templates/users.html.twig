{% extends  'base.html.twig' %}

{% block title %}Usuarios{% endblock %}

{% block stylesheets %}
	<style>
		.container{
			margin-top: 20px;
			max-width: 90%;
		}
	</style>
{% endblock %}

{% block body %}
	{% include 'header.html.twig' %}

	<div class="container center">
		<table class="border">
		  <thead>
		    <tr>
		      <th>Id</th>
		      <th>Nombre</th>
		      <th>Apellido</th>
		      <th>Telefono</th>
		      <th></th>
		    </tr>
		  </thead>
		  <tbody>
		  {% for u in users %}
		    <tr>
		      <td>{{ u.getId() }}</td>
		      <td>{{ u.getName() }}</td>
		      <td>{{ u.getLastName() }}</td>
		      <td>{{ u.getPhone() }}</td>
		      <td>
		        <nav class="right-align">
		          <a href="/usuario">
		            <i>visibility</i>
		          </a>
		          <a href="/editarusuario">
		            <i>edit</i>
		          </a>
		          <a>
		            <i>delete</i>
		          </a>
		        </nav>
		      </td>
		    </tr>
		{% endfor %}
		  </tbody>
		</table>
	</div>
	
{% endblock %}
